<apex:page standardController="Opportunity">
<apex:form >
<apex:pageBlock mode="edit">
<apex:pageBlockButtons >
<apex:commandButton action="{!save}" value="Save"/>
</apex:pageBlockButtons>
<apex:pageBlockSection title="Opportunity Main Section" columns="2">
<apex:inputField value="{!Opportunity.Name}"/>
<apex:inputField value="{!Opportunity.CloseDate}"/>
<apex:inputField value="{!Opportunity.StageName}"/>
<apex:inputField value="{!Opportunity.Account.Name}"/>
</apex:pageBlockSection>

<apex:pageBlockSection title="Opportunity Detail Section" columns="2">
<apex:inputField value="{!Opportunity.TotalOpportunityQuantity}"/>
<apex:inputField value="{!Opportunity.Description}"/>
<apex:inputField value="{!Opportunity.Type}"/>
<apex:inputField value="{!Opportunity.Type}"/>
</apex:pageBlockSection>



</apex:pageBlock>
</apex:form>
</apex:page>